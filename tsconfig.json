/* To learn more about Typescript configuration file: https://www.typescriptlang.org/docs/handbook/tsconfig-json.html. */
/* To learn more about Angular compiler options: https://angular.dev/reference/configs/angular-compiler-options. */
{
  "compileOnSave": false,
  "compilerOptions": {
    "strict": true,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "ES2022",
    "module": "preserve",
    "baseUrl": "./src",
    "paths": {
      "@app/*": ["app/*"],
      "@core/*": ["app/core/*"],
      "@application/*": ["app/core/application/*"],
      "@dto/*": ["app/core/application/dto/*"],
      "@domain/*": ["app/core/domain/*"],
      "@infrastructure/*": ["app/infrastructure/*"],
      "@entities-infrastructure/*": ["app/infrastructure/adapters/secondary/database/entities/*"],
      "@adapters/*": ["app/infrastructure/adapters/*"],
      "@configuration/*": ["app/infrastructure/configuration/*"],
      "@presentation/*": ["app/presentation/*"],
      "@components/*": ["app/presentation/components/*"],
      "@layouts/*": ["app/presentation/layouts/*"],
      "@pages/*": ["app/presentation/pages/*"],
      "@services/*": ["app/presentation/services/*"],
      "@shared/*": ["app/shared/*"]
    }
  },
  "angularCompilerOptions": {
    "enableI18nLegacyMessageIdFormat": false,
    "strictInjectionParameters": true,
    "strictInputAccessModifiers": true,
    "typeCheckHostBindings": true,
    "strictTemplates": true
  },
  "files": [],
  "references": [
    {
      "path": "./tsconfig.app.json"
    },
    {
      "path": "./tsconfig.spec.json"
    }
  ]
}
